<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlink}}
</head>

<body>
    <div>
        {{>navbar}}

        <div class="container-fluid main_header">
            <div class="row">
                <div class="col-md-10 col-12 mx-auto">

                    <div class="main_content">
                        <form class="temp_form">
                            <input type="text" name="cityName" placeholder="Enter your city name" autocomplete="off"
                                id="cityName">
                            <input type="submit" value="submit" id="submitBtn">
                        </form>
                    </div>

                    <div class="tempInformation">
                        <div class="top_layer">
                            <p id="day">Saturday</p>
                            <p id="today_day">13 Oct</p>
                        </div>
                    </div>

                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp">20<sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    {{!-- footer code --}}
    {{>footer}}
    <script src="js/main.js"></script>
</body>

</html>